@model ProjectLib.PModels.ProjectModel

@{
    ViewBag.Title = "NCCS Innovation Lab | Edit";
}

<nav class='navbar-fixed-top-after'>
    <a href="javascript:void(0)" id='close-menu' class="closebtn">&times;</a>
    <img class='nav-icon' src='~/Content/Images/nclogo.png' id='nc-icon' />
    @Html.ActionLink("HOME", "Index", "Home")
    @Html.ActionLink("PROJECTS", "Projects", "Home", null, new { @class = "active" })
    @Html.ActionLink("EVENTS", "Events", "Home")
    @Html.ActionLink("CONTACT", "Contact", "Home")
    @Html.ActionLink("APPLY", "Apply", "Apply")
</nav>
<div class="navbar-side">
    <span id="hamburger" onclick="">&#9776;</span>
    <img class="nav-icon-side" src='~/Content/Images/nclogo.png' id='nc-icon-side' />
</div>
<div class="section">

    <div class="section row theme-steelgray">
        <div class="col-l-12 section-content">
            <div id="application_form">
                <div id="application_header">
                    <h3>APPLICATION FOR NEUMONT INNOVATION CENTER</h3>
                </div>

                @using (Html.BeginForm())
                {
                    <div id="form">

                        <div class="form-entry">
                            <p class="label"><b>Project Name:</b></p>
                            @Html.TextBoxFor(model => model.Name, new { @placeholder = "Your Name Here" })
                        </div>

                        <div class="form-entry">
                            <p class="label"><b>Project Owner Name:</b></p>
                            @Html.TextBoxFor(model => model.Owner, new { @placeholder = "Your Email Here" })
                        </div>

                        <div class="form-entry">
                            <p><b>Project Description:</b></p>
                            @Html.TextAreaFor(model => model.Image, new { @placeholder = "How did your project come about? What will it do?", @rows = 5 })
                        </div>

                        <div class="form-entry">
                            <p><b>Project Successful?:</b></p>
                            @Html.CheckBoxFor(model => model.Success, new {@checked = true})
                        </div>


                    </div>

                    <div id="submit-btn">
                        <input type="submit" value="Submit" class="nc-btn uppercase" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>
